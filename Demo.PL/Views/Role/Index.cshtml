@model IEnumerable<RoleViewModel>
@{
    ViewData["Title"] = "Index";
}

<a asp-action="Create" class="btn btn-primary">Create New Role</a>

<div class="row justify-content-center align-items-center mt-5">
    <form asp-action="Index" class="row col-8 offset-1">
        <div class="col-8">
            <input type="search" class="form-control" name="name" placeholder="Search by name" />

        </div>
        <div class="col-4">
            <input type="submit" class="btn btn-success" />
        </div>
    </form>
</div>

@if (Model.Any())
{
    <table class=" mt-3 table table-striped table-hover">
        @*Table Head*@
        <thead>
            <tr>
                <td>@Html.DisplayNameFor(e => e.Id)</td>
                <td>@Html.DisplayNameFor(e => e.RoleName)</td>

                <td>Details</td>
                <td>Update</td>
                <td>Delete</td>
            </tr>
        </thead>

        @*table body*@
        <tbody>
            @foreach (var role in Model)
            {
                <tr>
                    <td>@role.Id</td>
                    <td>@role.RoleName</td>
                    <partial name="_ButtonsPartialView" model="role.Id" />

                </tr>
            }
        </tbody>
    </table>
}
else
{
    <div class="mt-4 alert alert-warning">
        <h3>There is no Roles !!</h3>

    </div>
}
