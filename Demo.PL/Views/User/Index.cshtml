@model IEnumerable<UserViewModel>
@{
    ViewData["Title"] = "Index";
}



<div class="row justify-content-center align-items-center mt-5">
    <form asp-action="Index" class="row col-8 offset-1">
        <div class="col-8">
            <input type="search" class="form-control" name="email" placeholder="Search by email" />

        </div>
        <div class="col-4">
            <input type="submit" class="btn btn-success" />
        </div>
    </form>
</div>

@if (Model.Any())
{
    <table class=" mt-3 table table-striped table-hover">
        @*Table Head*@
        <thead>
            <tr>
                <td>@Html.DisplayNameFor(e => e.Id)</td>
                <td>@Html.DisplayNameFor(e => e.FName)</td>
                <td>@Html.DisplayNameFor(e => e.LName)</td>
                <td>@Html.DisplayNameFor(e => e.Email)</td>
                <td>@Html.DisplayNameFor(e => e.Roles)</td>

                <td>Details</td>
                <td>Update</td>
                <td>Delete</td>
            </tr>
        </thead>

        @*table body*@
        <tbody>
            @foreach (var user in Model)
            {
                <tr>
                    <td>@user.Id</td>
                    <td>@user.FName</td>
                    <td>@user.LName</td>
                    <td>@Html.DisplayFor(m=>user.Email)</td>
                    <td>@string.Join(" ",user.Roles)</td>
                    <partial name="_ButtonsPartialView" model="user.Id" />

                </tr>
            }
        </tbody>
    </table>
}
else
{
    <div class="mt-4 alert alert-warning">
        <h3>There is no Users !!</h3>

    </div>
}
